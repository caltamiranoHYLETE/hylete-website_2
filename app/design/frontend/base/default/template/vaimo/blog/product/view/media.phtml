 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
?>
<div class="product-img-box">
<p class="product-image">
    <a href="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(800) ?>" rel="group">
        <?php
        $_img = '<img class="blog-image" src="'.$this->helper('catalog/image')->init($_product, 'image')->keepFrame(false)->resize(262).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
        ?>
    </a>
</p>
<?php if (count($this->getGalleryImages()) > 1): ?>
<div class="more-views">
    <ul class="row">
        <?php $_i = 0; ?>
        <?php foreach ($this->getGalleryImages() as $_image): ?>
        <?php if($_i > 0): ?>
            <li class="span1<?php if (($_i)%3 == 0): ?> last<?php endif; ?>">
                <a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(800);?>" rel="group" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->keepFrame(false)->resize(100); ?>" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" /></a>
            </li>
            <?php endif; ?>
        <?php $_i++; ?>
        <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
</div>