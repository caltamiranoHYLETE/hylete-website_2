<?xml version="1.0"?>
<layout>
    <checkout_onepage_index>

        <reference name="head">
            <action method="removeItem"><type>js</type><name>directpost.js</name></action>
            <action method="addItem"><type>skin_css</type><name>css/quickcheckout.css</name><group>checkout</group></action>
            <action method="addJs"><script>icommerce/quickcheckout.js</script><group>checkout</group></action>
            <action method="addJs"><script>icommerce/directpost.js</script><group>checkout</group></action>
            <action method="addJs"><script>lib/ccard.js</script></action>
    		<action method="addJs"><script>varien/accordion.js</script><group>checkout</group></action>
        </reference>

        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>

        <reference name="right">

            <action method="unsetChildren"></action>

            <block type="cms/block" name="quickcheckout_block_1"><action method="setBlockId"><block_id>quickcheckout_block_1</block_id></action></block>
            <block type="cms/block" name="quickcheckout_block_2"><action method="setBlockId"><block_id>quickcheckout_block_2</block_id></action></block>
            <block type="cms/block" name="quickcheckout_block_3"><action method="setBlockId"><block_id>quickcheckout_block_3</block_id></action></block>
            <block type="cms/block" name="quickcheckout_block_4"><action method="setBlockId"><block_id>quickcheckout_block_4</block_id></action></block>

        </reference>

        <reference name="checkout.onepage">
            <action method="setTemplate"><template>checkout/onepage-quickcheckout.phtml</template></action>
        </reference>

        <reference name="checkout.onepage.login">
        	<action method="setTemplate"><template>checkout/onepage/login-quickcheckout.phtml</template></action>
        </reference>

		<reference name="checkout.onepage.shipping_method">
			<action method="setTemplate"><template>checkout/onepage/shipping_method-quickcheckout.phtml</template></action>
		</reference>

		<reference name="checkout.onepage.payment">
			<action method="setTemplate"><template>checkout/onepage/payment-quickcheckout.phtml</template></action>
		</reference>

		<reference name="checkout.onepage.review">
			<action method="setTemplate"><template>checkout/onepage/review-quickcheckout.phtml</template></action>
			 <block type="core/text_list" name="checkout.onepage.review.info.items.before" as="items_before" translate="label">
                <label>Items Before</label>
            </block>
            <block type="core/text_list" name="checkout.onepage.review.info.items.after" as="items_after" translate="label">
                <label>Items After</label>
            </block>
		</reference>

        <reference name="checkout.onepage.agreements">
            <action method="setTemplate"><template>checkout/onepage/agreements-quickcheckout.phtml</template></action>
        </reference>

    </checkout_onepage_index>

</layout>
