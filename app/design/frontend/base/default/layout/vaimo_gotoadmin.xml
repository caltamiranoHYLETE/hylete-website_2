            <action method="addItem" ifconfig="gotoadmin/general/active"><type>skin_css</type><name>css/vaimo_gotoadmin.css</name></action>    		
			<action method="addItem" ifconfig="gotoadmin/general/active"><type>skin_js</type><name>js/vaimo_gotoadmin.js</name></action>
