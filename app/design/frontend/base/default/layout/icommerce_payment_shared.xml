<?xml version="1.0"?>
<layout>
    <checkout_onepage_index>
        <reference name="head">
            <action method="removeItem"><type>skin_js</type><name>js/opcheckout.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/payment-shared-opcheckout.js</name><group>checkout</group></action>

            <action method="addJs"><script>icommerce/window.js</script><group>checkout</group></action>
            <action method="addCss"><stylesheet>css/window.css</stylesheet><group>checkout</group></action>
            <action method="addCss"><stylesheet>css/paymentshared/shipping-method-tooltips.css</stylesheet><group>checkout</group></action>
             <action method="addItem"><type>skin_js</type><name>js/paymentshared/shipping-method-tooltip.js</name><group>checkout</group></action>
        </reference>
        <reference name="checkout.onepage.billing">
            <action method="setTemplate"><template>checkout/onepage/billing-paymentshared.phtml</template></action>
        </reference>
        <reference name="checkout.onepage.shipping">
            <action method="setTemplate"><template>checkout/onepage/shipping-paymentshared.phtml</template></action>
        </reference>
        <reference name="checkout.payment.methods">
            <action method="setTemplate"><template>checkout/onepage/payment/methods-paymentshared.phtml</template></action>
        </reference>
    </checkout_onepage_index>

    <checkout_onepage_paymentmethod>
        <reference name="root">
            <action method="setTemplate"><template>checkout/onepage/payment/methods-paymentshared.phtml</template></action>
        </reference>
    </checkout_onepage_paymentmethod>

    <checkout_onepage_shippingmethod>
        <reference name="root">
            <action method="setTemplate"><template>checkout/onepage/shipping_method/available-paymentshared.phtml</template></action>
        </reference>
    </checkout_onepage_shippingmethod>
</layout>
