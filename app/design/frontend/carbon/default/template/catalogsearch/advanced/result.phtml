<div class="page-title">
    <h1><?php echo $this->__('Catalog Advanced Search') ?></h1>
</div>
<?php echo $this->getMessagesBlock()->toHtml() ?>
<div class="advanced-search-summary<?php echo ($this->getResultCount()) ? '' : ' no-result' ?>">
    <?php $searchCriterias=$this->getSearchCriterias(); ?>
        <ul class="search-criteria">
        <?php foreach (array('left', 'right') as $side): ?>
            <?php if(@$searchCriterias[$side]): ?>
                <?php foreach($searchCriterias[$side] as $criteria): ?>
                    <li><?php echo $this->htmlEscape($this->helper('catalog')->__($criteria['name'])); ?>: <strong><?php echo $this->htmlEscape($criteria['value']); ?></strong></li>
                <?php endforeach; ?>
            <?php endif; ?>
        <?php endforeach; ?>
        </ul>

        <p class="advanced-search-did-not-find">
            <span><?php echo $this->helper('catalogsearch')->__("Don't see what you're looking for?"); ?></span>
            <button class="button" onclick="setLocation('<?php echo $this->getFormUrl(); ?>')"><span><span><?php echo $this->helper('catalogsearch')->__('Modify your search'); ?></span></span></button>
        </p>
</div>

<?php if(!$this->getResultCount()): ?>
    <p class="error-msg"><?php echo $this->helper('catalogsearch')->__('No items were found using the following search criteria.');?> <a href="<?php echo $this->getFormUrl(); ?>"><?php echo $this->helper('catalogsearch')->__('Modify your search'); ?></a></p>
<?php endif; ?>

<?php if($this->getResultCount()): ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>
<?php $this->getSearchCriterias(); ?>
