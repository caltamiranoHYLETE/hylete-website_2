$_helperHylete = $this->helper('hylete');
$_productCategory = $_helperHylete->getCategory();
$_subCategories = $_productCategory->getChildrenCategories();
?>
<div class="social-links">
    <h2><?php echo $this->__('join the conversation') ?></h2>

    <div class="content follow-us">
        <a href="https://instagram.com/trainhylete" target="_blank" class="instagram"><i class="fab fa-instagram"></i></a>
