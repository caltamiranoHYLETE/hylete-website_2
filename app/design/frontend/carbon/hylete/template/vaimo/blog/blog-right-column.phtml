        <a href="https://www.youtube.com/trainHYLETE" target="_blank" class="youtube"><i class="fab fa-youtube"></i></a>
    </div>
</div>

<div class="categories">
    <h2><?php echo $this->__('categories') ?></h2>
    <ul class="category-list">
        <li>
            <a href="<?php echo $_productCategory->getURL() ?>" alt="<?php echo $_productCategory->getName(); ?>">
                <?php echo $_productCategory->getName(); ?>
            </a>
        </li>
        <?php if (count($_subCategories) > 0) : ?>
            <?php foreach ($_subCategories as $_subCategory) : ?>
                <?php if ($_subCategory->getIsActive()) : ?>
                    <li>
                        <a href="<?php echo $_subCategory->getURL() ?>" alt="<?php echo $_subCategory->getName(); ?>">
                            <?php echo $_subCategory->getName(); ?>
                        </a>
                    </li>
                <?php endif ?>
            <?php endforeach ?>
        <?php endif ?>
    </ul>
</div>
<?php if($this->getChild('blog.popular.post')): ?>
