<div class="block block-account">
    <div class="block-title">
        <h1><?php echo $this->__('my account'); ?></h1>
    </div>
    <div class="block-content">
        <ul>
            <?php $_links = $this->getLinks(); ?>

            <?php if ($_links['rewards']) : $_links['rewards']->setLabel('My points')?>
                <?php if ($this->isActive($_links['rewards'])) : ?>
                    <li class="current"><span><?php echo $_links['rewards']->getLabel() ?></span></li>
                <?php else: ?>
                    <li><a href="<?php echo $_links['rewards']->getUrl() ?>"><?php echo $_links['rewards']->getLabel() ?></a></li>
                <?php endif ?>
                <?php unset($_links['rewards']); endif; ?>

            <?php if (isset($_links['rewardsref']) && $_links['rewardsref']) : ?>
                <?php if ($this->isActive($_links['rewardsref'])) : ?>
                    <li class="current"><span><?php echo $_links['rewardsref']->getLabel() ?></span></li>
                <?php else: ?>
                    <li><a href="<?php echo $_links['rewardsref']->getUrl() ?>"><?php echo $_links['rewardsref']->getLabel() ?></a></li>
                <?php endif ?>
                <?php unset($_links['rewardsref']); endif; ?>

            <?php $_isLogOutExist = isset($_links['Logout']); ?>
            <?php $_index = 1; ?>
            <?php $_count = count($_links); ?>
            <?php foreach ($_links as $_link): ?>
                <?php $_last = ($_index++ >= $_count); ?>
                <?php if ($_link->getName() != 'Logout'): ?>
                    <?php if ($this->isActive($_link)): ?>
                        <li class="current<?php echo ($_last && !$_isLogOutExist ? ' last' : '') ?>"><span><?php echo $_link->getLabel() ?></span></li>
                    <?php else: ?>
                        <li<?php echo ($_last && !$_isLogOutExist ? ' class="last"' : '') ?>><a href="<?php echo $_link->getUrl() ?>"><?php echo $_link->getLabel() ?></a></li>
                    <?php endif; ?>
                <?php endif; ?>
            <?php endforeach; ?>
            <?php if ($_isLogOutExist): ?>
                <li class="last"><a href="<?php echo $_links['Logout']->getUrl() ?>"><?php echo $_links['Logout']->getLabel() ?></a></li>
            <?php endif; ?>
        </ul>
    </div>
</div>
