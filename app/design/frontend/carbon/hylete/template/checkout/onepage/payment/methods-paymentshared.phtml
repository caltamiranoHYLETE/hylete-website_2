<?php
/**
 * One page checkout payment methods
 *
 * @see Mage_Checkout_Block_Onepage_Payment_Methods
 */

$_noPayment = false;
?>

<div class="payment-methods">
    <dl id="checkout-payment-method-load">
    <?php echo $this->getChildChildHtml('methods_additional', '', true, true) ?>

    <?php // Icommerce Credit Check ?>
    <?php if (method_exists($this,'OKButChangedAddress')): ?>
        <?php if ($this->OKButChangedAddress($this->getQuote()->getBillingAddress(), $this->getQuote()->getShippingAddress())): ?>
            <p class="validation-advice"><?php echo $this->__('You will not be able to use Invoice payment method because you changed the Identified name and address.') ?></p>
            <br/>
        <?php elseif (method_exists($this,'CustomerOverCreditLimit')): ?>
            <?php if ($this->CustomerOverCreditLimit($this->getQuote())): ?>
                <p class="validation-advice"><?php echo $this->__('You will not be able to use Invoice payment method because this order takes you over your credit limit.') ?></p>
                <br/>
            <?php endif; ?>
        <?php endif; ?>
    <?php endif; ?>

    <?php foreach ($this->getMethods() as $_key => $_method): $_code = $_method->getCode() ?>
        <?php if ($_code == 'free'): ?>
            <?php
                $_noPayment = true;
                $_noPaymentCode = $_code;
                $_noPaymentTitle = $this->htmlEscape($_method->getTitle());

                break;
            ?>
        <?php endif ?>
    <?php endforeach; ?>

    <?php if (!$_noPayment): ?>
        <?php foreach ($this->getMethods() as $_method): $_code = $_method->getCode() ?>
            <?php // Added for payment / shipping dependencies ?>
            <div id="payment_method_<?php echo $_code ?>">
            <dt>
            <?php if( sizeof($this->getMethods()) > 1 ): ?>
                <label class="radio">
                    <input id="p_method_<?php echo $_code ?>"
                           value="<?php echo $_code ?>"
                           type="radio" name="payment[method]"
                           title="<?php echo $this->htmlEscape($_method->getTitle()) ?>"
                           class="radio"
                           onclick="payment.switchMethod('<?php echo $_code ?>')" />
                    <?php if ($_code == 'paypal_express'):?>
                        <img src="<?php echo $this->getSkinUrl('images/PP_logo_h_200x51.png');?>" border="0" alt="PayPal" class="paypapl-logo" />
                    <?php else:?>
                        <?php echo $_method->getTitle() ?>
                    <?php endif;?>
                </label>
            <?php else: ?>
                <span class="no-display">
                    <input id="p_method_<?php echo $_code ?>"
                           value="<?php echo $_code ?>"
                           type="radio" name="payment[method]"
                           checked="checked" />
                </span>
                <label for="p_method_<?php echo $_code ?>"><?php echo $_method->getTitle() ?></label>
            <?php endif; ?>
            </dt>
            <?php if($html = $this->getChildHtml('payment.method.'.$_code)): ?>
            <dd>
                <?php echo $html; ?>
            </dd>
            <?php endif; ?>
            </div>
        <?php endforeach; ?>
    <?php else: ?>
        <div id="payment_method_<?php echo $_noPaymentCode ?>">
            <span class="no-display">
                <input id="p_method_<?php echo $_noPaymentCode ?>"
                       value="<?php echo $_noPaymentCode ?>"
                       type="radio" name="payment[method]"
                       title="<?php echo $_noPaymentTitle ?>"
                       class="radio" onclick="payment.switchMethod('<?php echo $_code ?>')"
                       checked="checked" />
            </span>
            <label class="radio"><?php echo $_noPaymentTitle ?></label>
        </div>
    <?php endif; ?>
    </dl>
</div>
<script type="text/javascript">
    payment.init();
    jQuery('#payment_form_gateway').show(); // TODO: Maybe move to quickcheckout.js. For some reason quickcheckout sets this to display none in some cases
    <?php echo $this->getChildChildHtml('scripts', '', true, true) ?>
</script>
