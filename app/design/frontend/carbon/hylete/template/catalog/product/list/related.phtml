<?php /* @var $this Enterprise_TargetRule_Block_Catalog_Product_List_Related */ ?>
<?php if ($this->hasItems()): ?>
    <div class="morecolors">
        <h2><?php echo $this->__('more colors');?></h2>
        <ul class="row">
            <?php foreach($this->getItemCollection() as $_item): ?>
                <li class="col-xs-4 col-sm-3 col-md-2 col-lg-2">
                    <a href="<?php echo $_item->getProductUrl() ?>" class="product-image">
                        <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(70)->setQuality(100) ?>" width="70" height="70" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" />
                    </a>
                </li>
            <?php endforeach ?>
        </ul>
    </div>
<?php endif;?>