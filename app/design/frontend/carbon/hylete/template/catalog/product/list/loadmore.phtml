 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php /** @var Vaimo_InfiniteScroll_Block_Page_Pager $this */ ?>
<?php if ($this->getCurrentPage() != $this->getLastPageNum() && $this->getCollection()->getSize()) : ?>
    <div class="toolbar">
        <div class="hidden"><?php echo $this->getPagerHtml() ?></div>
    
        <span class="show-more"><span class="button"><?php echo $this->__('load more'); ?></span></span>

        <?php $defaultLimit = $this->getDefaultPerPageValue(); ?>
        <?php Mage::getSingleton('catalog/session')->setData("limit_page", $defaultLimit) ?>
    </div>
<?php endif; ?>