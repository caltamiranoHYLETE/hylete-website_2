<?xml version="1.0"?>
<layout>

	<default>
		<reference name="head">
			<action method="addItem"><type>skin_css</type><name>css/ic_pagemanager.css</name><params/></action>
            <action method="addJs"><script>mage/adminhtml/browser.js</script></action>
		</reference>
	</default>

    <adminhtml_pagemanager_index>
        <reference name="content">
            <block type="pagemanager/page" name="index" template="icommerce/pagemanager/index.phtml">
            	<block type="pagemanager/page" name="massupdate" template="icommerce/pagemanager/page/massupdate.phtml" />
				<block type="pagemanager/page" name="empty" template="icommerce/pagemanager/page/empty.phtml" />
            </block>
        </reference>
    </adminhtml_pagemanager_index>

    <adminhtml_pagemanager_add>
        <reference name="content">
            <block type="pagemanager/page_add" name="add" template="icommerce/pagemanager/page/add.phtml"/>
        </reference>
    </adminhtml_pagemanager_add>

    <adminhtml_pagemanager_edit>
        <reference name="content">
            <block type="pagemanager/page_edit" name="edit" template="icommerce/pagemanager/page/edit.phtml">
            	<block type="pagemanager/page_row" name="rows" template="icommerce/pagemanager/page/rows.phtml">
            		<block type="pagemanager/page" name="massupdate" template="icommerce/pagemanager/page/massupdate.phtml" />
					<block type="pagemanager/page" name="empty" template="icommerce/pagemanager/page/row/empty.phtml" />
            	</block>
            </block>
        </reference>
    </adminhtml_pagemanager_edit>

    <adminhtml_pagerow_add>
        <reference name="content">
            <block type="pagemanager/page_row_add" name="add" template="icommerce/pagemanager/page/row/add.phtml"/>
