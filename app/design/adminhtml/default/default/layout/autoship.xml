<layout version="0.1.0">

    <adminhtml_sales_order_create_index>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/autoship.css</name><group>autoship</group></action>
            <action method="addItem"><type>skin_js</type><name>js/autoship/jquery/jquery-1.10.1.min.js</name><group>autoship</group></action>
            <action method="addItem"><type>skin_js</type><name>js/autoship/jquery/noconflict.js</name><group>autoship</group></action>
        </reference>
        <reference name="js">
            <block type="autoship/adminhtml_sales_order_create_iframescripts" name="spreedlyiframescripts" template="autoship/sales/create_order/iframescripts.phtml" after="-" />
        </reference>
        <reference name="order_item_extra_info">
            <block type="autoship/adminhtml_sales_order_create_product_subscription" name="autoship_subscribe_widget"
                   template="autoship/sales/create_order/product/subscription.phtml" />
        </reference>
    </adminhtml_sales_order_create_index>

    <adminhtml_sales_order_create_load_block_items>
        <reference name="order_item_extra_info">
            <block type="autoship/adminhtml_sales_order_create_product_subscription" name="autoship_subscribe_widget"
                   template="autoship/sales/create_order/product/subscription.phtml" />
        </reference>
    </adminhtml_sales_order_create_load_block_items>

</layout>
