<layout>
    <adminhtml_chechlist_listshow_index>
        <reference name="content">
            <block type="checklist/listshow" name="index" template="icommerce/checklist/index.phtml">
            	<block type="checklist/listshow" name="massupdate" template="icommerce/checklist/listshow/massupdate.phtml" />
				<block type="checklist/listshow" name="empty" template="icommerce/checklist/listshow/empty.phtml" />
            </block>
        </reference>
    </adminhtml_chechlist_listshow_index>

    <checklist_adminhtml_listshow_add>
        <reference name="content">
            <block type="checklist/listshow_add" name="add" template="icommerce/checklist/listshow/add.phtml"/>
        </reference>
    </checklist_adminhtml_listshow_add>

    <adminhtml_chechlist_listshow_edit>
        <reference name="content">
            <block type="checklist/listshow_edit" name="edit" template="icommerce/checklist/listshow/edit.phtml">
            	<block type="checklist/listshow_item" name="items" template="icommerce/checklist/listshow/items.phtml">
            		<block type="checklist/listshow" name="massupdate" template="icommerce/checklist/listshow/massupdate.phtml" />
					<block type="checklist/listshow" name="empty" template="icommerce/checklist/listshow/item/empty.phtml" />
            	</block>
            </block>
        </reference>
    </adminhtml_chechlist_listshow_edit>

    <adminhtml_chechlist_item_add>
        <reference name="content">
            <block type="checklist/listshow_item_add" name="add" template="icommerce/checklist/listshow/item/add.phtml"/>
        </reference>
    </adminhtml_chechlist_item_add>

    <adminhtml_chechlist_item_edit>
        <reference name="content">
            <block type="checklist/listshow_item_edit" name="edit" template="icommerce/checklist/listshow/item/edit.phtml"/>
            <block type="checklist/listshow_checkbox" name="checkboxes" template="icommerce/checklist/listshow/checkboxes.phtml"/>
        </reference>
    </adminhtml_chechlist_item_edit>

    <adminhtml_chechlist_checkbox_add>
        <reference name="content">
            <block type="checklist/listshow_checkbox_add" name="add" template="icommerce/checklist/listshow/checkbox/add.phtml"/>
        </reference>
    </adminhtml_chechlist_checkbox_add>

    <adminhtml_chechlist_checkbox_edit>
        <reference name="content">
            <block type="checklist/listshow_checkbox_edit" name="edit" template="icommerce/checklist/listshow/checkbox/edit.phtml"/>
        </reference>
    </adminhtml_chechlist_checkbox_edit>
</layout>
