<config>
    <tabs>
        <vaimo_addons translate="label" module="blog">
            <label><![CDATA[<div style="background: url(data:image/png;base64,) no-repeat; height: 18px; display: inline-block; padding: 1px 0 0 23px; margin-top: 2px;">Vaimo Modules</div>]]></label>
            <sort_order>999</sort_order>
        </vaimo_addons>
    </tabs>
    <sections>
        <blog translate="label" module="blog">
            <tab>vaimo_addons</tab>
            <label>Blog</label>
            <frontend_type>text</frontend_type>
            <sort_order>020120</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <blog_settings translate="label" module="blog">
                    <label>Blog Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <comments>
                            <label>Comments</label>
                            <frontend_type>select</frontend_type>
                            <source_model>blog/system_config_source_comments</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </comments>
                        <disqus_username>
                            <label>Disqus shortname</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                 <comments>
                                     <value>disqus</value>
                                 </comments>
                            </depends>
                        </disqus_username>
                        <excerpt>
                            <label>For each post in a feed, show</label>
                            <frontend_type>select</frontend_type>
                            <source_model>blog/system_config_source_excerpt</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </excerpt>
                        <summary_number_of_characters>
                            <label>Number of characters for summary</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <validate>validate-number</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </summary_number_of_characters>
                        <summary_suffix>
                            <label>Suffix for summary</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </summary_suffix>
                        <blog_parent_category_id>
                            <label>Blog's parent category ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </blog_parent_category_id>

                        <subcategories_inherits_blog_listing>
                            <label>Subcatory auto inherit blog-listing</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Sub categories to main blog category should inherit blog listing layout</comment>
                        </subcategories_inherits_blog_listing>
                    </fields>
                </blog_settings>
                <settings translate="label" module="blog">
                    <label>Module Settings</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <product_type>
                            <label>Name Of Product Type</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_type>
                        <attribute_set_id>
                            <label>Attribute Set Id</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </attribute_set_id>
                        <related_products>
                            <label>Activate Related Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </related_products>
                        <related_products_rename>
                            <label>Rename Related Products in Admin</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </related_products_rename>
                        <crosssell>
                            <label>Activate Cross-sells</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </crosssell>
                        <crosssell_rename>
                            <label>Rename Cross-sell in Admin</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </crosssell_rename>
                        <upsell>
                            <label>Activate Up-sells</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </upsell>
                        <upsell_rename>
                            <label>Rename Up-sell in Admin</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>55</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </upsell_rename>
                        <show_publish_date>
                            <label>Show Publish Date</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_publish_date>
                        <force_sort_publish_date>
                            <label>Sort by Publish Date</label>
                            <comment>The list with blog posts will be sort by publish date.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </force_sort_publish_date>
                        <author>
                            <label>Activate Author</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </author>
                    </fields>
                </settings>
            </groups>
        </blog>
    </sections>
</config>