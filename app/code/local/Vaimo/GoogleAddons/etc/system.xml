<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <vaimo_addons translate="label" module="googleaddons">
            <label>Vaimo Modules</label>
            <sort_order>999</sort_order>
        </vaimo_addons>
    </tabs>
    <sections>
        <googleaddons>
            <label>Google Addons</label>
            <tab>vaimo_addons</tab>
            <frontend_type>text</frontend_type>
            <sort_order>070150</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <google_tag_manager translate="label" module="googleaddons">
                    <label>Google Tag Manager</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Google Tag Manager</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <gtm_container_id translate="label">
                            <label>Container ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gtm_container_id>
                    </fields>
                </google_tag_manager>
                <google_analytics translate="label" module="googleaddons">
                    <label>Google Analytics</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Google Analytics</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <visible>0</visible>
                        </enable>
                        <universal translate="label">
                            <label>Enable Universal Analytics</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </universal>
                        <web_property_id translate="label">
                            <label>Web Property ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </web_property_id>
                    </fields>
                </google_analytics>
                <adwords_dynamic_remarketing translate="label" module="googleaddons">
                    <label>Adwords Dynamic Remarketing</label>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Google Adwords Dynamic Remarketing</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <visible>1</visible>
                        </enable>
                    </fields>
                </adwords_dynamic_remarketing>
                <settings translate="label" module="googleaddons">
                    <label>General Setings</label>
                    <sort_order>4</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <include_tax_in_total translate="label">
                            <label>Include tax and shipping in total transaction amount</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <visible>1</visible>
                            <comment><![CDATA[Total transaction amount is displayed as 'revenue' in GA and 'transactionTotal' in GTM.]]></comment>
                        </include_tax_in_total>
                        <include_tax_in_items translate="label">
                            <label>Include tax in line items amount</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <visible>1</visible>
                        </include_tax_in_items>
                        <include_discount_in_total translate="label">
                            <label>Include discount in total transaction amount</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <visible>1</visible>
                            <comment><![CDATA[Subtract any discounts from item and total transaction amount]]></comment>
                        </include_discount_in_total>
                    </fields>
                </settings>
            </groups>
        </googleaddons>
    </sections>
</config>