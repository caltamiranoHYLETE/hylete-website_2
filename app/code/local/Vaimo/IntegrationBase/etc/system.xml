<config>
    <tabs>
        <vaimo_addons translate="label" module="integrationbase">
            <label><![CDATA[<div style="background: url(data:image/png;base64,) no-repeat; height: 18px; display: inline-block; padding: 1px 0 0 23px; margin-top: 2px;">Vaimo Modules</div>]]></label>
            <sort_order>999</sort_order>
        </vaimo_addons>
    </tabs>
    <sections>
        <integrationbase translate="label" module="integrationbase">
            <label>Integration Base</label>
            <tab>vaimo_addons</tab>
            <sort_order>090140</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <export_queue translate="label">
                    <label>Export Queue</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <customer>
                            <label>Customers</label>
                            <frontend_type>select</frontend_type>
                            <source_model>integrationbase/system_config_source_queue_add_default</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customer>
                        <order>
                            <label>Orders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>integrationbase/system_config_source_queue_add_order</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order>
                        <invoice>
                            <label>Invoices</label>
                            <frontend_type>select</frontend_type>
                            <source_model>integrationbase/system_config_source_queue_add_default</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </invoice>
                        <shipment>
                            <label>Shipments</label>
                            <frontend_type>select</frontend_type>
                            <source_model>integrationbase/system_config_source_queue_add_default</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shipment>
                        <creditmemo>
                            <label>Credit Memos</label>
                            <frontend_type>select</frontend_type>
                            <source_model>integrationbase/system_config_source_queue_add_default</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </creditmemo>
                        <payment>
                            <label>Payments</label>
                            <frontend_type>select</frontend_type>
                            <source_model>integrationbase/system_config_source_queue_add_default</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </payment>
                    </fields>
                </export_queue>
                <post>
                    <label>Post</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                        </enabled>
                        <password>
                            <label>Password</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                        </password>
                    </fields>
                </post>
                <apply_rules translate="label">
                    <label>Apply rules</label>
                    <comment>Default is to NOT apply price rules for catalog</comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <apply_to_types>
                            <label>Apply price rules to</label>
                            <comment>Select the product types you want to apply price rules to, and then check the settings below</comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>integrationbase/system_config_applytotypes</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>10</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apply_to_types>
                        <apply_after_product_import>
                            <label>After Product import</label>
                            <comment>Apply product price rules after a product import</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apply_after_product_import>
                        <apply_after_attribute_import>
                            <label>After Attribute import</label>
                            <comment>Apply product price rules after an attribute import when changing SKU, Category_ids, Price</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apply_after_attribute_import>
                        <apply_after_price_import>
                            <label>After Price import</label>
                            <comment>Apply product price rules after a price import</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apply_after_price_import>
                        <apply_on_zero_price>
                            <label>Apply on Zero price</label>
                            <comment>Apply price rules (if selected above) even if price = 0</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apply_on_zero_price>
                    </fields>
                </apply_rules>
            </groups>
        </integrationbase>
    </sections>
