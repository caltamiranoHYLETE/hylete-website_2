<?xml version="1.0"?>
<config>
	<tabs>
		<icommerce_addons translate="label" module="addtocartajax">
			<label>Icommerce Additions</label>
			<sort_order>999</sort_order>
		</icommerce_addons>
	</tabs>
    <sections>
        <addtocartajax translate="label comment" module="addtocartajax">
            <tab>icommerce_addons</tab>
            <label>AddToCartAjax</label>
            <frontend_type>text</frontend_type>
            <sort_order>220</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label" module="addtocartajax">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <redirect_url translate="label comment">
                            <label>Redirect URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Enter redirect url relative to the base url. Example values: checkout/onepage/ or checkout/cart/]]></comment>
                        </redirect_url>
                        <overlay_hex_color_code translate="label comment">
                            <label>Overlay hexadecimal color code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Enter the hexadecimal color code. Leave empty to disable background overlay. Example value: #000000]]></comment>
                        </overlay_hex_color_code>
                        <overlay_opacity translate="label comment">
                            <label>Overlay opacity</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Enter the opacity for the overlay. Example value: .50]]></comment>
                        </overlay_opacity>
                        <popup_width translate="label comment">
                            <label>Popup width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Enter how wide you want the popup in pixels. Example value: 250]]></comment>
                        </popup_width>
                        <popup_timeout translate="label comment">
                            <label>Popup timeout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Enter the number of seconds before the popup closes itself. Example value: 10.0]]></comment>
                        </popup_timeout>
                        <popup_fadeout_duration translate="label comment">
                            <label>Popup fadeout duration</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Enter the popup fadeout duration in seconds. Example value: 0.5]]></comment>
                        </popup_fadeout_duration>
                        <product_checkout_button translate="label comment">
                            <label>Add checkout button on product page</label>
                            <frontend_type>select</frontend_type>
			              	<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If set to yes, a checkout button will appear on the product page after adding the product to the cart.]]></comment>
                        </product_checkout_button>
                        <show_related_products translate="label comment">
                            <label>Show related products in the popup</label>
                            <frontend_type>select</frontend_type>
			              	<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If set to yes, related products will be shown in the popup]]></comment>
                        </show_related_products>
                        <show_popup_when_adding translate="label comment">
                            <label>Show popup when product is beeing added to cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If set to yes, the popup will be shown]]></comment>
                        </show_popup_when_adding>
                        <show_popup_when_deleting translate="label comment">
                            <label>Confirm before delete</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If set to yes, we the popup will be shown]]></comment>
                        </show_popup_when_deleting>
                        <use_headercart_xml translate="label comment">
                            <label>Use Icommerce_HeaderCart XML</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If set to yes, we will use HeaderCart instead of ATCA built in cart. Make sure that you have the updated version for Icommerce_HeaderCart ]]></comment>
                        </use_headercart_xml>
                        <!--<number_of_products translate="label comment">
                            <label>Show number of related products</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </number_of_products>     -->
                    </fields>
                </settings>
            </groups>
        </addtocartajax>
    </sections>
</config>
