<?xml version="1.0"?>
<config>
    <tabs>
        <icommerce_addons translate="label" module="setfrontendcurrency">
            <label>Icommerce Additions</label>
            <sort_order>999</sort_order>
        </icommerce_addons>
    </tabs>
    <sections>
        <setfrontendcurrency translate="label comment" module="setfrontendcurrency">
            <tab>icommerce_addons</tab>
            <label>Icommerce SetFrontendCurrency</label>
            <frontend_type>text</frontend_type>
            <sort_order>220</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label comment" module="setfrontendcurrency">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <precision_active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </precision_active>
                        <precision translate="label comment">
                            <label>Currency precision</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-zero-or-greater</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Currency precision level after commas</comment>
                        </precision>
                    </fields>

                </settings>
            </groups>
        </setfrontendcurrency>
    </sections>
</config>
