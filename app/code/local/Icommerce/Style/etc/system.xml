<?xml version="1.0"?>
<config>
    <tabs>
        <icommerce_addons translate="label" module="style">
            <label>Icommerce Additions</label>
            <sort_order>999</sort_order>
        </icommerce_addons>
    </tabs>
    <sections>
        <icommerce_style translate="label comment" module="style">
            <tab>icommerce_addons</tab>
            <label>Icommerce Style</label>
            <frontend_type>text</frontend_type>
            <sort_order>230</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings translate="label" module="style">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <use_default_style_id translate="label comment">
                            <label>Enable logic related to "default_style_id" product attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Yes - enable logic related to "default_style_id". No - disable.<br />Please, note enabled logic can cause performance issues and deadlocks. This option has been added only for compatibility reasons.]]></comment>
                        </use_default_style_id>
                    </fields>
                </settings>
            </groups>
        </icommerce_style>
    </sections>
</config>
