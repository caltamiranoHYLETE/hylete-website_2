<?xml version="1.0"?>
<config>
    <tabs>
        <vaimo_addons translate="label" module="imagebinder">
            <label><![CDATA[<div style="background: url(data:image/png;base64,) no-repeat; height: 18px; display: inline-block; padding: 1px 0 0 23px; margin-top: 2px;">Vaimo Modules</div>]]></label>
            <sort_order>999</sort_order>
        </vaimo_addons>
    </tabs>
    <sections>
        <imagebinder translate="label comment" module="imagebinder">
            <tab>vaimo_addons</tab>
            <label>Image Binder</label>
            <frontend_type>text</frontend_type>
            <sort_order>090130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings translate="label comment" module="imagebinder">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <orig_mode translate="label comment">
                            <label>Original Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <comment><![CDATA[Use ImageBinder in original mode (i.e. sku.jpg, sku_1.jpg, ... (ignores regular expression below)]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </orig_mode>
                        <import_path translate="label">
                            <label>Import Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </import_path>
                        <check_file_age translate="label comment">
                            <label>Check File Age</label>
                            <frontend_type>select</frontend_type>
                            <source_model>imagebinder/adminhtml_source_check</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </check_file_age>
                        <regex translate="label comment">
                            <label>Filename Format</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Regular expression to separate filename (without extension) into fields. Enclose field matches in brackets (). Fields are numbered starting with 1. Forward slashes (/) must be escaped.]]></comment>
                        </regex>
                        <attribute_field translate="label comment">
                            <label>Attribute Field no.</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <!--<comment><![CDATA[Regular expression]]></comment>-->
                        </attribute_field>
                        <attribute_code translate="label comment">
                            <label>Attribute Code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Code of product attribute represented by field]]></comment>
                        </attribute_code>
                        <attribute_match_mode translate="label comment">
                            <label>Matching Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>imagebinder/adminhtml_source_matchmode</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attribute_match_mode>
                        <sortorder_field translate="label comment">
                            <label>Sort Order Field no.</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sortorder_field>
                        <sortorder_type translate="label comment">
                            <label>Sort Order Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>imagebinder/adminhtml_source_sortorder</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[First image in selected sort order, will be the main product image]]></comment>
                        </sortorder_type>
                        <imagetype_field translate="label comment">
                            <label>Image Type Field no.</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Field specifying image type, e.g. s=small, t=thumbnail]]></comment>
                        </imagetype_field>
                        <only_bind_unbound translate="label comment">
                            <label>Only Bind Unbound Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Only import new images for products that currently do not have any images at all]]></comment>
                        </only_bind_unbound>
                        <set_as_main_if_no_main_exist translate="label comment">
                            <label>If No Main Image Exist, Select The One with Lowest Sorting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[If no main image is set for the product, it will set it on the image with the lowest sorting]]></comment>
                        </set_as_main_if_no_main_exist>
                        <remove_before_import translate="label comment">
                            <label>Remove Old Images Before Import</label>
                            <frontend_type>select</frontend_type>
                            <source_model>imagebinder/adminhtml_source_remove</source_model>
                            <sort_order>130</sort_order>
                            <comment><![CDATA[Clear out all old product images before import]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </remove_before_import>
                        <move_failsuccess_path translate="label">
                            <label>Treat Imported Files</label>
                            <frontend_type>select</frontend_type>
                            <source_model>imagebinder/adminhtml_source_treat</source_model>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </move_failsuccess_path>
                        <flush_images_cache translate="label">
                            <label>Flush Images Cache</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[If enabled, then for every new image bound, it deletes all cache entries for this image]]></comment>
                        </flush_images_cache>
<!--
                        <run translate="comment">
                            <frontend_type>button</frontend_type>
                            <frontend_model>imagebinder/adminhtml_run</frontend_model>
                            <sort_order>900</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Make sure configuration is saved before run</comment>
                        </run>
 -->
                    </fields>
                </settings>
            </groups>
        </imagebinder>
    </sections>
</config>
