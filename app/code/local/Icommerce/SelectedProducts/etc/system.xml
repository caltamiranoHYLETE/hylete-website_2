<?xml version="1.0"?>
<config>
    <tabs>
        <vaimo_addons translate="label" module="selectedproducts">
            <label><![CDATA[<div style="background: url(data:image/png;base64,) no-repeat; height: 18px; display: inline-block; padding: 1px 0 0 23px; margin-top: 2px;">Vaimo Modules</div>]]></label>
            <sort_order>999</sort_order>
        </vaimo_addons>
    </tabs>
    <sections>
        <selectedproducts translate="label comment" module="selectedproducts">
            <tab>vaimo_addons</tab>
            <label>Selected Products</label>
            <frontend_type>text</frontend_type>
            <sort_order>190050</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label comment" module="selectedproducts">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <fallback_category_label translate="label">
                            <label>Falback category label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[When a category is not found, echo this as category name]]></comment>
                        </fallback_category_label>
                        <has_global_products translate="label">
                            <label>Has global products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Does website use same products for all stores? NOTE: data-cache will be shared between the stores as well if this is enabled]]></comment>
                        </has_global_products>
                        <seconds_to_expire translate="label">
                            <label>Expire after (in seconds)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[600 = 10 minutes<br/>3600 = 1 hour<br/>86400 = 1 day]]></comment>
                        </seconds_to_expire>
                        <order_filter_length translate="label">
                            <label>Order filter length (days)</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If value is 0 (zero), then default behaviour is active]]></comment>
                        </order_filter_length>
                        <views_count_days translate="label">
                            <label>Days back of "views count" (days)</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If value is 0 (zero), then default behaviour is active (logged_at filter will not be applied)]]></comment>
                        </views_count_days>
                        <instock_filter translate="label">
                            <label>Append instock filter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Append a filter on collection for products in stock.]]></comment>
                        </instock_filter>
                        <fallback_attribute_name translate="label">
                            <label>Name of fallback attribute</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Name of attribute to use as fallback if collection is less than the minimum products below.]]></comment>
                        </fallback_attribute_name>
                        <fallback_number_of_products translate="label">
                            <label>Minimum number of products a collection should return</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If the collection is returning less than this number and Name of fallback attribute is set, collection is filled up to Minimum level.]]></comment>
                        </fallback_number_of_products>
                        <include_children_categories translate="label">
                            <label>Include subcategories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[set to 'Yes' selects products from the main category and all children categories]]></comment>
                        </include_children_categories>
                    </fields>
                </settings>
            </groups>
        </selectedproducts>
    </sections>
</config>
