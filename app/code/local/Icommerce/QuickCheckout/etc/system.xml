<?xml version="1.0"?>
<config>
    <tabs>
        <vaimo_addons translate="label" module="quickcheckout">
            <label><![CDATA[<div style="background: url(data:image/png;base64,) no-repeat; height: 18px; display: inline-block; padding: 1px 0 0 23px; margin-top: 2px;">Vaimo Modules</div>]]></label>
            <sort_order>999</sort_order>
        </vaimo_addons>
    </tabs>
    <sections>
        <quickcheckout translate="label comment" module="quickcheckout">
            <tab>vaimo_addons</tab>
            <label>QuickCheckout</label>
            <frontend_type>text</frontend_type>
            <sort_order>170210</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label comment" module="quickcheckout">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
			            <expand_login_form translate="label">
			              <label>Expand loginform</label>
			              <frontend_type>select</frontend_type>
			              <source_model>adminhtml/system_config_source_yesno</source_model>
			              <sort_order>1</sort_order>
			              <show_in_default>1</show_in_default>
			              <show_in_website>1</show_in_website>
			              <show_in_store>1</show_in_store>
						  <comment><![CDATA[Show login fields without toggle functionality.]]></comment>
			            </expand_login_form>
			            <enable_separate_shipping_address translate="label">
			              <label>Separate Shipping address </label>
			              <frontend_type>select</frontend_type>
			              <source_model>adminhtml/system_config_source_yesno</source_model>
			              <sort_order>2</sort_order>
			              <show_in_default>1</show_in_default>
			              <show_in_website>1</show_in_website>
			              <show_in_store>1</show_in_store>
						  <comment><![CDATA[Enable if you need separate shipping address.]]></comment>
			            </enable_separate_shipping_address>
			            <autofill_customer_address translate="label">
			              <label>Autofill customer address </label>
			              <frontend_type>select</frontend_type>
			              <source_model>adminhtml/system_config_source_yesno</source_model>
			              <sort_order>3</sort_order>
			              <show_in_default>1</show_in_default>
			              <show_in_website>1</show_in_website>
			              <show_in_store>1</show_in_store>
						  <comment><![CDATA[Populate address fields if customer has an address and chooses to add a new address.]]></comment>
			            </autofill_customer_address>
			            <show_forgot_password_link translate="label">
			              <label>Show forgot password link</label>
			              <frontend_type>select</frontend_type>
			              <source_model>adminhtml/system_config_source_yesno</source_model>
			              <sort_order>4</sort_order>
			              <show_in_default>1</show_in_default>
			              <show_in_website>1</show_in_website>
			              <show_in_store>1</show_in_store>
						  <comment><![CDATA[Show forgot password link in checkout?]]></comment>
			            </show_forgot_password_link>
			            <enable_accept_terms_popup translate="label">
			              <label>Enable accept terms popup</label>
			              <frontend_type>select</frontend_type>
			              <source_model>adminhtml/system_config_source_yesno</source_model>
			              <sort_order>4</sort_order>
			              <show_in_default>1</show_in_default>
			              <show_in_website>1</show_in_website>
			              <show_in_store>1</show_in_store>
						  <comment><![CDATA[Shows terms in popup when clicking checkout link.]]></comment>
			            </enable_accept_terms_popup>
                        <update_shipping_on_region_change>
                            <label>Enable change of region to update shipping and payment methods</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <!-- <comment><![CDATA[.]]></comment> -->
                        </update_shipping_on_region_change>
                        <not_redirect_onepage_to_cart_on_error translate="label">
                            <label>Not redirect to cart if there is error</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Do not redirect the customer to the cart if there are errors in the cart, like the minimum cart value is too low. This setting will override the OnepageController.]]></comment>
                        </not_redirect_onepage_to_cart_on_error>
                        <redirect_not_logged_in_customer_to_registration>
                            <label>Redirect not logged in customer to registration</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Require the customer to be registered and logged-in to be able to go to the checkout.]]></comment>
                        </redirect_not_logged_in_customer_to_registration>
                        <redirect_not_logged_in_customer_to_login>
                            <label>Redirect not logged in customer to login</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Require the customer to be logged-in to be able to go to the checkout. If "Redirect not logged in customer to registration" is set, the customer will be redirected to the registration page instead.]]></comment>
                        </redirect_not_logged_in_customer_to_login>
                        <redirect_checkout_to_cart_when_cart_is_empty>
                            <label>Redirect from checkout to cart, when cart is empty</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Default behaviour is to stay on the checkout page, even if there are no items in cart.]]></comment>
                        </redirect_checkout_to_cart_when_cart_is_empty>
                        <payment_as_first_step>
                            <label>Payment method as first step</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If yes, payment method will be the first step instead of the third.]]></comment>
                        </payment_as_first_step>
                    </fields>
                </settings>
            </groups>
        </quickcheckout>
    </sections>
</config>
