<?xml version="1.0"?>

<config>
    <modules>
        <TBT_Billboard>
            <version>0.1.0</version>
        </TBT_Billboard>
    </modules>
    
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <tbtbillboard after="Mage_Adminhtml">TBT_Billboard</tbtbillboard>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    
    <global>
        <blocks>
            <tbtbillboard>
                <class>TBT_Billboard_Block</class>
            </tbtbillboard>
        </blocks>
    </global>
    
    <adminhtml>
        <layout>
            <updates>
                <tbtbillboard>
                    <file>tbtbillboard.xml</file>
                </tbtbillboard>
            </updates>
        </layout>
        <translate>
              <modules>
                  <TBT_Billboard>
                      <files>
                          <default>TBT_Billboard.csv</default>
                      </files>
                  </TBT_Billboard>
              </modules>
        </translate>
    </adminhtml>
</config>
