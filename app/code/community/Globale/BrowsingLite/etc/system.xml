<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <globale_settings>
            <groups>
                <browsing_lite_settings>
                    <label>Browsing Lite</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <fields>
                        <enable_gem_include>
                            <label>Enable JS/CSS include</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If no - system won't include Global-e CSS and JS </comment>
                        </enable_gem_include>
                        <tracking_js>
                            <label>JS code for order confirmation</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>JS code to be executed upon Global-e order create event</comment>
                        </tracking_js>
                    </fields>
                </browsing_lite_settings>
            </groups>
        </globale_settings>
    </sections>
</config>