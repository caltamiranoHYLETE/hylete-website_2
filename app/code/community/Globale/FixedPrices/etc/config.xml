<?xml version="1.0"?>
<config>
    <modules>
        <Globale_FixedPrices>
            <version>1.1.0</version>
        </Globale_FixedPrices>
    </modules>
    <global>
        <events>
            <!-- Add new field under the product "Prices" tab, for fixed prices widget-->
            <adminhtml_catalog_product_edit_prepare_form>
                <observers>
                    <globale_fixedprices>
                        <class>Globale_FixedPrices_Model_Observers_Admin</class>
                        <method>addFixedPriceField</method>
                    </globale_fixedprices>
                </observers>
            </adminhtml_catalog_product_edit_prepare_form>
        </events>
        <blocks>
            <globale_fixedprices>
                <class>Globale_FixedPrices_Block</class>
            </globale_fixedprices>
        </blocks>
        <models>
            <globale_fixedprices>
                <class>Globale_FixedPrices_Model</class>
                <resourceModel>globale_fixedprices_resource</resourceModel>
            </globale_fixedprices>
            <globale_fixedprices_resource>
                <class>Globale_FixedPrices_Model_Resource</class>
                <entities>
                    <fixedprices>
                        <table>globale_fixedprices</table>  <!-- Actual table name in sql -->
                    </fixedprices>
                </entities>
            </globale_fixedprices_resource>
        </models>
        <blocks>
            <globale_fixedprices>
                <class>Globale_FixedPrices_Block</class>
            </globale_fixedprices>
        </blocks>
        <resources>
            <globale_fixedprices_setup>
                <setup>
                    <module>Globale_FixedPrices</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </globale_fixedprices_setup>
            <fixedprices_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </fixedprices_write>
            <fixedprices_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </fixedprices_read>
        </resources>
        <events>
            <!-- Load fixed prices  -->
            <globale_build_products_request_before>
                <observers>
                    <globale_load_products_fixed_price>
                        <type>singleton</type>
                        <class>Globale_FixedPrices_Model_Observers_Products</class>
                        <method>loadProductsFixedPrices</method>
                    </globale_load_products_fixed_price>
                </observers>
            </globale_build_products_request_before>
            <!-- update productRequest prices  -->
            <globale_build_product_request_data>
                <observers>
                    <globale_load_products_fixed_price>
                        <type>singleton</type>
                        <class>Globale_FixedPrices_Model_Observers_Products</class>
                        <method>updateProductFixedPrices</method>
                    </globale_load_products_fixed_price>
                </observers>
            </globale_build_product_request_data>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <globale_fixedprices before="Mage_Adminhtml">Globale_FixedPrices_Adminhtml</globale_fixedprices>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <events>
            <catalog_product_prepare_save>
                <observers>
                    <globale_fixedprices_save_product_data>
                        <class>Globale_FixedPrices_Model_Observers_Admin</class>
                        <method>updateFixedPrices</method>
                    </globale_fixedprices_save_product_data>
                </observers>
            </catalog_product_prepare_save>
        </events>
    </adminhtml>
</config>